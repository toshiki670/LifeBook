{
  "name": "lifebook",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "typecheck": "react-router typegen && tsc",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "prepare": "husky",
    "sync-version": "node scripts/sync-version.js",
    "prebuild": "pnpm sync-version",
    "predev": "pnpm sync-version",
    "export-schema": "cd src-tauri && cargo run --bin export_schema",
    "codegen": "pnpm export-schema && graphql-codegen"
  },
  "dependencies": {
    "@apollo/client": "^4.0.7",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@react-router/node": "^7.9.4",
    "@react-router/serve": "^7.9.4",
    "@tauri-apps/api": "^2.9.0",
    "@tauri-apps/plugin-opener": "^2.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "graphql-tag": "2.12.6",
    "isbot": "^5.1.31",
    "lucide-react": "0.548.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router": "^7.9.4",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.0",
    "@graphql-codegen/cli": "6.0.1",
    "@graphql-codegen/near-operation-file-preset": "3.1.0",
    "@graphql-codegen/typed-document-node": "6.0.2",
    "@graphql-codegen/typescript": "5.0.2",
    "@graphql-codegen/typescript-operations": "5.0.2",
    "@react-router/dev": "^7.9.4",
    "@tailwindcss/vite": "^4.1.16",
    "@tauri-apps/cli": "^2.9.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "graphql": "16.11.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "tailwindcss": "^4.1.16",
    "tw-animate-css": "^1.4.0",
    "typescript": "5.9.3",
    "vite": "7.1.10",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "packageManager": "pnpm@10.18.1+sha512.77a884a165cbba2d8d1c19e3b4880eee6d2fcabd0d879121e282196b80042351d5eb3ca0935fa599da1dc51265cc68816ad2bddd2a2de5ea9fdf92adbec7cd34",
  "lint-staged": {
    "*.graphql": [
      "bash -c 'pnpm run codegen'"
    ],
    "*.{ts,tsx,js,jsx,json,jsonc,md}": [
      "biome format --write --no-errors-on-unmatched",
      "biome check --write --no-errors-on-unmatched"
    ],
    "src/**/*": [
      "bash -c 'pnpm run typecheck'"
    ],
    "src-tauri/**/*": [
      "bash -c 'cd src-tauri && cargo clippy --fix --allow-dirty --allow-staged -- -D warnings'",
      "bash -c 'cd src-tauri && cargo fmt --all'"
    ]
  }
}
